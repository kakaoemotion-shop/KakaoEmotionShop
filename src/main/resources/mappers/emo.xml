<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.kakaoemotionshop.repository.EmoRepository">
    <select id="searchEmo" parameterType="com.korit.kakaoemotionshop.web.dto.SearchReqDto"
            resultType="com.korit.kakaoemotionshop.entity.EmoMst">
        select
            em.emo_id as emoId,
            em.emo_code as emoCode,
            em.emo_name as emoName,
            em.company,
            em.emo_date as emoDate
            el.like_id,
            el.emo_id,
            el.user_id
            
        from
            emo_mst
            left outer join emo_like el on(el.emo_id = em.emo_id and el.user_id = #{userId})
        where
            1 = 1
        <if test = "searchValue != null">
            and (
                em.emo_name like concat('%', #{searchValue}, '%')
            or  em.company like concat('%', #{searchValue}, '%')
            )
        </if>
        

        order by
        <choose>
             <when test = 'order == "emoName"'>em.emo_name,</when>
             <when test = 'order == "company"'>em.company,</when>
             <when test = 'order == "dateAsc"'>em.emo_date,</when>
             <when test = 'order == "dataDesc"'>em.emo_date desc,</when>
        </choose>
        em.emo_id
        <if test = 'limit == "Y"'>
            limit #{index}, #{count}
        </if>
    </select>
    <select id="getEmoTotalCount" parameterType="com.korit.kakaoemotionshop.web.dto.SearchNumberListDto" resultType="integer">
        select
            count(*)
        from
            emo_mst
        where
            1 = 1
        <if test='searchValue != null and searchValue !=""'>
            and   (
            emo_name like CONCAT('%', #{searchValue}, '%')
            or   company like CONCAT('%', #{searchValue}, '%')
            )
        </if>
    </select>

    

    <select id="findEmoByEmoCode" resultType="com.korit.kakaoemotionshop.entity.EmoMst">
        select
            emo_id as emoId,
            emo_code as emoCode,
            emo_name as emoName,
            company,
            emo_date as emoDate
        from
            emo_mst
        where
            emo_code = #{emoCode}
    </select>

    <select id="findEmoImageAll" resultType="com.korit.kakaoemotionshop.entity.EmoImage">
        select
            image_id as imageId,
            emo_code as emoCode,
            save_name as saveName,
            origin_name as originName
        from
            emo_image
        where
            emo_code = #{emoCode}
    </select>

    <select id="findEmoImageByImageId" resultType="com.korit.kakaoemotionshop.entity.EmoImage">
        select
            image_id as imageId,
            emo_code as emoCode,
            save_name as saveName,
            origin_name as originName
        from
            emo_image
        where
            image_id = #{imageId}
    </select>

    <insert id="saveEmo" parameterType="com.korit.kakaoemotionshop.web.dto.EmoReqDto">
        insert into emo_mst
        values
            (0, #{emoCode},#{emoName}, #{company}, #{emoDate})
    </insert>

    <insert id="registerEmoImages" parameterType="list">
        insert into emo_image
        values
        <foreach collection="list" item="file" separator=",">
            (0, #{file.emoCode}, #{file.saveName}, #{file.originName})
        </foreach>
    </insert>

    <update id="updateEmoByEmoCode" parameterType="com.korit.kakaoemotionshop.web.dto.EmoReqDto">
        update emo_mst
        set
            emo_name = #{emoName},
            company = #{company},
            emo_date = #{emoDate}
        where
            emo_code = #{emoCode}
    </update>

    <delete id="deleteEmo">
        delete
        from
            emo_mst
        where
            emo_code = #{emoCode}
    </delete>
    <delete id="deleteEmos" parameterType="list">
        delete
        from
            emo_mst
        where
            emo_id in
        <foreach collection="list" item="emoId" open="(" close=")" separator=",">
            #{emoId}
        </foreach>
    </delete>

    <delete id="deleteEmoImage">
        delete
        from
            emo_image
        where
            image_id = #{imageId}
    </delete>
</mapper>